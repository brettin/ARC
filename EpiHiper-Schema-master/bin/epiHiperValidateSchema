/* eslint-disable max-len */

const pkg = require('../package.json');
const commander = require('commander');
const EpiHiperValidator = require('../lib/epiHiperValidator');

let files;

commander
    .version(pkg.version)
    .description('EpiHiper Schema Validation')
    .usage('[options] <file ...>')
    .option('--schema-dir <schema-dir>', 'Use the schemas in the provided directory instead of the internal ones.')
    // .option('--no-default', 'Do not add defaults for missing values')
    .arguments('<files...>')
    .action(function(_files) {
      files = _files;
    });

commander.parse(process.argv);

if (!Array.isArray(files)) {
  commander.help();
  process.exit(1);
}

const epiHiperValidator = new EpiHiperValidator(commander.schemaDir);

epiHiperValidator
    .processFiles(epiHiperValidator.validateSchema.bind(epiHiperValidator), files)
    .then((result) => {
      process.exit(result ? 0 : 1);
    });
